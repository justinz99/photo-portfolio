html {
    font-family: "Times New Roman", "Helvetica", san-serif;
    font-size: 16px;
    height:100%;
}

a {
    text-decoration: none;
    color:#000;
}

a:hover {
    color: #000;
    text-decoration: line-through;
}

body, header, section, footer {
    background-color: rgb(223, 223, 223);
}

.brah {
    border: 1px solid #000;
}

.project-body {
    height: 100%;
}

.name-logo { 
    margin-top: 3rem;
    margin-left: 1rem;
    width: 12rem;
}

.name-logo.slide {
    animation-name: slideIn;
    animation-fill-mode: forwards;
    animation-duration: 2s;
    animation-delay: 2s;
}

@keyframes slideIn {
    from {transform: translateX(0);}
    to {transform: translateX(25vw);}
}

.mulu {
    font-family: 'Noto Sans SC', sans-serif;
    font-size: 24px;
    margin-top: 3rem;
    margin-right: 3rem;
    max-width: 200px;
    position: relative;
    z-index: 2;
}

.dropdown {
    position: absolute;
    left: 0;
    top: calc(100% + .5rem);
    opacity: 0;
    pointer-events: none;
    transform: translateY(-10px);
    transition: all 150ms ease-in-out;
}

.dropdown.active {
    pointer-events: auto;
    transform: translateY(0);
    opacity: 1;    
}

.back-btn {
    font-size: 24px;
    margin-top: 3rem;
    margin-left: 1rem;
    max-width: 200px;
    position: relative;
    z-index: 2;
}

.socials {
    justify-content: center;
}

.project-cover { 
    transition: all .3s ease-in-out;
}

.project-cover:hover {
    transform: scale(1.01);
    box-shadow: rgba(255, 255, 255, 0.1) 0px 1px 1px 0px inset, rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;
}

.project-title {
    font-family: "Times New Roman";
    margin-bottom: 5rem;
    color: #aaaaaa;
    mix-blend-mode: difference;
    font-size: 10vw;
    z-index: 10;
    pointer-events: none;
    transition: all .3s ease-in-out;
}

.project-title.fadeUp {
    opacity: 1;
    transform: translateY(0px);
}


.footer-container {
    min-height: 10vh;
    display: flex;
}

.slideshow {
    z-index: 0;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
}

.img-wrapper {
    width: 100%;
    height: 100vh;
}

.project-desc {
    font: 2em 'times new roman';
}

.footnote {
    color:#696969;
}

.fa {
    margin-left: 10px;
    color: black;
}

.about-offset {
    margin-top: 10%;
}

.resume-offset {
    margin-top: 8%;
}

.resume-date {
    color:#a8a8a8;
    font-size: small;
    font-style: italic;
}

.naenae-wrapper {
    position: relative;
    width: 50vw;
    min-width: 300px;
    height: 369px;
    margin-bottom: 50px;
}

.naenae {
    position: absolute;
    top: auto;
    pointer-events: none;
}

.naenae-nae {
    z-index: 1;
    opacity: 0;   
}

.naenae-whip {
    z-index: 0;
    opacity: 0;
}

.flipped {
    transform: scaleX(-1);
}

@media (min-width: 768px){
    .name-logo {
        position: fixed;
        margin-top: 2rem;
        width: 12vw;
    }

    .mulu {
        position: fixed;
        right: 4rem;
        margin-top: 2rem;
    }

    .back-btn {
        position: fixed;
        left: 4rem;
        margin-top: 2rem;
    }

    .socials {
        justify-content: end;
    }    

    .resume-offset {
        margin-top: 18%;
    }

    .footer-container {
        height: 15vh;
    }

    .project-cover {
        margin-bottom: 5rem;
    }

    .project-title {
        position: fixed;
        margin-bottom: 0;
        bottom: 20vh;
        right: 30px;
        opacity: 0;
    }

    .project-title.fadeUp {
        opacity: 1;
        transform: translateY(-20px);
    }

    .naenae-wrapper {
        width: 100%;
        height: 50vh;
    }
}

.project-img {
    position: absolute;
}

.project-img.onTop {
    z-index: 999;
}

